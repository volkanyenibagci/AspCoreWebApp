        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">


                        <div class="card-body">
                            @(Html
        .Grid(Model)
        .Build(columns =>
        {
            columns.Add(model => model.PersonelID).Titled("Personel Id");
            columns.Add(model => model.PersonelAd).Titled("Personel Adı");
            columns.Add(model => model.PersonelSoyad).Titled("Personel Soyadı");
            columns.Add(model => "<a class=\"btn btn-block btn-danger\"  href="+ "https://localhost:44348/Departman/" + "DepartmanPersonelSatis/" + model.PersonelID + ">Personel Satış</a>").Encoded(false);

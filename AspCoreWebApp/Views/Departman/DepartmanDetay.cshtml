@model System.Collections.Generic.List<AspCoreWebApp.Entities.Models.Personel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Departman Detay</h1>
                </div>

                <ol class="breadcrumb mb-4">
                    <li class="breadcrumb-item active">@ViewBag.DepartmanAdi</li>
                </ol>

                @*<div class="col-sm-6">

@using AspCoreWebApp.Entities.Models
@model List<Kategori>
@{
    ViewBag.Title = "Kategori";
    Layout = "_KategoriLayout";
}


<!-- Content Wrapper. Contains page content-->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Kategoriler</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Anasayfa</a></li>
                        <li class="breadcrumb-item active">Kategoriler</li>
                    </ol>
                </div>
            </div>
        </div>
        <!--  /.container-fluid-->
    </section>
    <!--  Main content-->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header" >
                            <div class="col-2">
                                @*<button class="btn btn-block btn-primary">Yeni Kayıt</button>*@
                                <a href="~/Home/KategoriEkle" class="btn btn-block btn-primary" >Yeni Kayıt</a>
                            </div>
                        </div>
                        <!--  /.card-header-->
                        <a href="~/App_Data/"></a>
                       
                        <div class="card-body">
                          

                            

                            
                            <table class="table table-bordered" style="margin-top: 20px">
                                       <tr>
                                           <th>ID</th>
                                           <th>Kategori Adı</th>
                                           <th>Sil</th>
                                           <th>Güncelle</th>
                                           
                                       </tr>
                                       @foreach (var item in Model)
                                                  {
                                                      <tr>
                                                              <td>
                                                                  @Html.DisplayFor(modelItem => item.KategoriID)
                                                              </td>
                                                              <td>
                                                                  @item.KategoriAd
                                                              </td>
                                                         
                                                          <td><a href="/Home/KategoriSil/@item.KategoriID" class="btn btn-danger">Sil</a></td>
                                                           <td><a href="/Home/KategoriGetir/@item.KategoriID" class="btn btn-success">Güncelle</a></td>
                                                           
                                                      </tr>
                                                  }
                                                  </table>
                        </div>
    
    <!--   /.card-body-->
</div>
                    <!--  /.card-->
                </div>
                <!--  /.col-->
    </div>
    <!--  /.row-->
            </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->
    </div>

<script>
    var collapsed = false;
    function contentReady(e) {
        if(!collapsed) {
            collapsed = true;
            e.component.expandRow(["EnviroCare"]);
        }
    }

    function customizeTooltip(pointsInfo) {
        return { text: parseInt(pointsInfo.originalValue) + "%" };
    }
</script>